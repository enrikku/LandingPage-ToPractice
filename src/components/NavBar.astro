<script>
  const aTime = document.getElementById("aTime") as HTMLAnchorElement;
  const aTech = document.getElementById("aTech") as HTMLAnchorElement;
  const aAuthors = document.getElementById("aAuthors") as HTMLAnchorElement;

  aAuthors.addEventListener("click", () => {
    scrollToAnchor("#authors");
  });

  aTime.addEventListener("click", () => {
    scrollToAnchor("#time");
  });

  aTech.addEventListener("click", () => {
    scrollToAnchor("#tech");
  });

  function scrollToAnchor(anchorId: any) {
    const target = document.querySelector(anchorId);
    if (target) {
      target.scrollIntoView({
        behavior: "smooth", // Hace que el desplazamiento sea suave
        block: "start", // Alinea la parte superior del objetivo al borde superior del contenedor
      });
    }
  }

  const burgerBtn = document.getElementById("burger-btn");
  const menu = document.getElementById("menu");
  const dropdownMenu = document.getElementById("dropdown-menu");

  burgerBtn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
    dropdownMenu?.classList.toggle("hidden");
  });
</script>

<style>
  @media screen and (max-width: 768px) {
    #menu {
      display: none;
    }

    #burger-btn{
      display: block;
    }
  }

  @media screen and (min-width: 1000px) {
    #burger-btn {
      display: none;
    }
  }
</style>
