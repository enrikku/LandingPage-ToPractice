<script>
  const aTime = document.getElementById("aTime") as HTMLAnchorElement;
  const aTech = document.getElementById("aTech") as HTMLAnchorElement;
  const aAuthors = document.getElementById("aAuthors") as HTMLAnchorElement;
  const aDesc = document.getElementById("aDesc") as HTMLAnchorElement;
  const aConc = document.getElementById("aConc") as HTMLAnchorElement;
  const aHome = document.getElementById("aHome") as HTMLAnchorElement;

  const button = document.querySelector("[data-collapse-toggle]");
  const menu = document.getElementById("navbar-default");

  if (button && menu) {
    button.addEventListener("click", function () {
      const expanded = button.getAttribute("aria-expanded") === "true" || false;

      //button.setAttribute("aria-expanded", !expanded);
      
      menu.classList.toggle("hidden");
    });
  }

  aAuthors.addEventListener("click", () => {
    scrollToAnchor("#authors");
  });

  aTime.addEventListener("click", () => {
    scrollToAnchor("#time");
  });

  aTech.addEventListener("click", () => {
    scrollToAnchor("#tech");
  });

  aDesc.addEventListener("click", () => {
    scrollToAnchor("#desc");
  });

  aConc.addEventListener("click", () => {
    scrollToAnchor("#conc");
  });

  aHome.addEventListener("click", () => {
    scrollToAnchor("#home");
  });

  function scrollToAnchor(anchorId: any) {
    const target = document.querySelector(anchorId);
    if (target) {
      target.scrollIntoView({
        behavior: "smooth", // Hace que el desplazamiento sea suave
        block: "start", // Alinea la parte superior del objetivo al borde superior del contenedor
      });
    }
  }
</script>

