---
import SupabaseLogo from "../../public/Technologies/SupabaseLogo.svg";

import tech from "../../jsons/technologies.json";
---

<div class="grid grid-cols-3 m-5" id="containerCards">
  {
    tech.map((tech: any) => (
      <div class="max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700 animate-fade">
        <a href="#" class="flex items-center justify-center">
          <img src={tech.logo} alt="" class="w-1/3 mt-5 hover:transition-transform hover:scale-110">
        </a>
        <div class="p-5">
          <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">
              {tech.name}
            </h5>
          </a>
          <p class="mb-3 font-normal text-gray-400">{tech.description}</p>
        </div>
      </div>
    ))
  }
</div>

