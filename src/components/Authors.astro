---
import AuthorCard from "./AuthorCard.astro";
import authors from "../../jsons/authors.json";
---

<div class="flex justify-center items-center m-10">
    {
        authors.map((author) => (
            <AuthorCard
                name={author.name}
                role={author.role}
                image={author.image}
                github={author.github}
                linkedin={author.linkedin}
            />
        ))
    }
</div>
