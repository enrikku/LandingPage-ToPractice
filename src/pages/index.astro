---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

import Technologies from "../components/Technologies.astro";
import TimeChart from "@components/TimeChart.astro";
import Authors from "@components/Authors.astro";
import Home from "@components/Home.astro";
import Description from "@components/Description.astro";
import Architecture from "@components/Architecture.astro";
import Conclustion from "@components/Conclustion.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>ToPractice</title>
  </head>
  <body>
    <NavBar />
    <main class="w-full flex justify-center items-center flex-col">
      <Home />

      <Description />

      
      <div>
        <h1 class="text-7xl p-4 m-2" id="tech">Technologies</h1>
      </div>
      <div class="w-full flex justify-center items-center">
        <div class="w-5/6 bg-grayPerso">
          <Technologies />
        </div>
      </div>


      <div class="w-full flex flex-col justify-center items-center bg-grayPerso2">
        <div>
          <h1 class="text-7xl p-4 m-2" id="arch">Architecture</h1>
        </div>
        <Architecture />
      </div>

      <div
        class="w-full flex flex-col justify-center items-center"
        id="timeDiv"
      >
        <div>
          <h1 class="text-7xl p-4 m-2" id="time">Time</h1>
        </div>
        <div class="w-5/6 flex justify-center items-center">
          <TimeChart />
        </div>
      </div>

      <div class="w-full flex flex-col justify-center items-center bg-grayPerso2 h-screen">
        <h1 class="text-7xl p-4 m-2" id="conc">Conclusions</h1>
        <Conclustion />
      </div>

      <div class="w-full flex flex-col justify-center items-center" id="authors">
        <div>
          <h1 class="text-7xl p-4 m-2" id="tech">Authors</h1>
        </div>
        <div class="w-5/6">
          <Authors />
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>

<style>
  /* Estilo de la barra de scroll */

  body::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }

  body::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom right, #999999 0%, #999999 100%);
    border-radius: 2px;
  }

  body::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom right, #777777 0%, #777777 100%);
  }

  @media screen and (min-width: 300px) {
    main {
      width: 100% !important;
    }

    #timeDiv {
      width: 100% !important;
    }

    h1{
      font-size: 3em;
    }
  }


</style>
